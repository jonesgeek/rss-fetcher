{
	"manifest_version": 2,
	"name": "Robux Trade Bot",
	"version": "0.1",

	"description": "Show me the Robux.",
	"icons": { "16" : "images/icon.png",
				"48" : "images/48.png",
				"128" : "images/128.png"},
	"homepage_url": "http://web.roblox.com/My/Money.aspx",
	
	"background": {
	    "scripts": [
	    	"scripts/jquery-1.6.1.min.js",
	    	"scripts/bg_fetch.js",
	    	"scripts/bot.js"
	    ]
	},
	
	"permissions": [
	  "http://web.roblox.com/My/Money.aspx*/*",
	  "notifications"
	],
	
	"browser_action": {
    	"default_icon": "images/icon.png", 
    	"default_title": "Robux Trade Bot",      
    	"default_popup": "popup.html"
    }
}